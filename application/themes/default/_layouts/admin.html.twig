<!doctype html>
<html>
<head>
	<title>{{ title }}</title>
	{{ css('lib/bootstrap/css/bootstrap.min.css') }}
	{{ less('less/admin.less') }}
	{% for style in styles %}
	    {{ css(style) }}
	{% endfor %}
	{{ js('js/less.js') }}
</head>
<body class="{{ is_login }}">
	{% if current %}
		{% include '_parts/top_userbar.html.twig' %}
	{% endif %}
	<div class="container">
		<div class="row">
			<div class="span12">
				<div id="header">
				</div>
				<div id="adminbar" class="navbar">
					<div class="navbar-inner">
						<ul class="nav">

							<li id="userbar-dashboard"><a href="{{ site_url('admin') }}"><i class="icon-home"></i> Dashboard</a></li>
							<li id="userbar-articles"><a href="{{ site_url('admin/articles') }}"><i class="icon-pencil"></i> Artikel Blog</a></li>
							<li id="userbar-files"><a href="{{ site_url('admin/files') }}"><i class="icon-file"></i> File</a></li>
							<li id="userbar-portfolios"><a href="{{ site_url('admin/portfolios') }}"><i class="icon-book"></i> Portofolio</a></li>

							<li id="userbar-links"><a href="{{ site_url('admin/links') }}"><i class="icon-globe"></i> Link</a></li>
						</ul>
					</div>
				</div>
				
				{% block content %}{% endblock %}
				<div id="footer">
					Copyright &copy; 2012 Program Studi Teknik Informatika - Universitas Islam Indonesia <br>	
					Phone. +62 274 895287 | Fax. +62 274 895007 ext. 148 <br>
					Disclaimer | More info: informatika.fti@uii.ac.id
				</div>
			</div>
		</div>
	</div>

	{{ js('js/holder.js') }}
	{{ js('lib/jquery/jquery-1.7.1.min.js') }}
	{{ js('lib/bootstrap/js/bootstrap.min.js') }}
	{% for script in scripts %}
	    {{ js(script) }}
	{% endfor %}

	<script type="text/javascript">
		$(function(){
			$('a.delete').click(function(){
				return confirm('Anda yakin ingin menghapus data ini?');
			});

			$(function(){
				$('#userbar-admin').addClass('active');
				$('#userbar-{{ active }}').addClass('active');
			});

			$('a.edit').tooltip({'title': 'Edit'});
			$('a.delete').tooltip({'title': 'Delete'});
			$('a.download').tooltip({'title': 'Download', 'placement': 'left'});
			$('a.upload').tooltip({'title': 'Re-upload'});
		});
	</script>
	{% block scripts %}{% endblock %}
</body>
</html>